<% if notice %>
  <div class="notice">
    <%= notice %>
  </div>
<% end %>

<%= simple_form_for(@project) do |f| %>
  <%= f.input :title %>
  <%= f.input :year %>
  <%= f.input :introduction, :as => :text %>
  <%= f.input :description, :as => :text %>
  <%= f.input :all_tags %>
  <%= f.input :main_picture, as: :file, input_html: { multiple: false } %>
  <%= f.input :primary_photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :secondary_photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Save", class: "btn btn-outline-primary btn-lg btn-block" %>
<% end %>
